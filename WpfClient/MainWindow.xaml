<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Bicycle DataBase" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" FontSize="35"/>
        <ListBox Grid.Row="1">
            
        </ListBox>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button Background="Aqua" Content="Load" MinWidth="75" Margin=" 15" Command="" />
            <Button Background="BurlyWood" Content="View" MinWidth="75" Margin=" 15" Command="" />
            <Button Background="SlateGray" Content="Add" MinWidth="75" Margin=" 15" Command="" />
            <Button Background="Khaki" Content="Modify" MinWidth="75" Margin=" 15" Command="" />
            <Button Background="Thistle" Content="Delete" MinWidth="75" Margin=" 15" Command="" />
        </StackPanel>
    </Grid>
</Window>
