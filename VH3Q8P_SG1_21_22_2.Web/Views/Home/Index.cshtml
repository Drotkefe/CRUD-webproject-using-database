@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To The Jungle</h1>

    <div id="bike-handler-app">
        <div class="button-container pb-3" style="text-align:center;">
            <button class="btn btn-secondary" v-on:click="loadBikes">Load</button>
            <button class="btn btn-success" v-on:click="createBike">Create</button>
            <button v-if="enabledBackToList" class="btn btn-secondary" v-on:click="backToList">Back to list</button>
        </div>
        <div id="content" style="display: flex; justify-content: center; flex-wrap: wrap;">
            <div v-if="errors.length > 0">
                <span v-for="msg in errors" style="color:red;font-weight:bold;">{{ msg }}</span>
            </div>
            <div v-if="messages.length > 0">
                <span v-for="msg in messages" style="color:green;">{{ msg }}</span>
            </div>
            <template v-if="operationMode == 0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Manufacture Id</th>
                            <th>Model</th>
                            <th>Price</th>
                            <th>Rider Id</th>
                            <th>Fix</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="bike in bikes">
                            <td>{{ bike.id}}</td>
                            <td>{{ bike.brandId }}</td>
                            <td>{{ bike.model_Name }}</td>
                            <td>{{ bike.price }}</td>
                            <td>{{ bike.riderId }}</td>
                            <td>{{ bike.fix }}</td>
                            <td style="width:20%;text-align:right;">
                                <button class="btn btn-info" v-on:click="viewBike(bike)">View</button>
                                <button class="btn btn-warning" v-on:click="editBike(bike)">Edit</button>
                                <button class="btn btn-danger" v-on:click="deleteBike(bike)">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </template>
            <template v-else-if="operationMode == 1">
                <view-component v-bind:bike="selectedBike"></view-component>
            </template>
            <template v-else-if="operationMode == 2">
                <!--Create case-->
                <editor-component v-on:saved="savedSuccessfully"
                                  v-on:cancelled="operationCancelled"></editor-component>
            </template>
            <template v-else>
                <!--Edit case-->
                <editor-component v-bind:bike="selectedBike"
                                  v-on:saved="savedSuccessfully"
                                  v-on:cancelled="operationCancelled"></editor-component>
            </template>
        </div>
    </div>
</div>


<script src="~/lib/vue/dist/vue.js"></script>
<script src="~/lib/axios/dist/axios.js"></script>

<script type="text/javascript">
    const axi = axios.create({
        baseURL: 'http://localhost:26061/api/bike/'
    });

    const axibrand = axios.create({
        baseURL:'http://localhost:26061/api/manufacture/'
    });

    const axirider = axios.create({
        baseURL:'http://localhost:26061/api/rider/'
    });

    var bikeHandlerApp = new Vue({
        el: '#bike-handler-app',
        data: {
            bikes: [],
            selectedBike: {},
            operationMode: 0,
            messages: [],
            errors: []
        },
        computed: {
            enabledBackToList() {
                return this.operationMode != 0;
            }
        },
        methods: {
            loadBikes() {
                axi.get('GetAll').then((response) => {
                    this.bikes = response.data;
                    console.log(response.data);
                }).catch((err) => {
                    console.log(err);
                });
            },
            viewBike: function (bike) {
                this.selectedBike = bike;
                this.operationMode = 1;
            },
            createBike: function () {
                this.operationMode = 2;
            },
            editBike: function (bike) {
                this.selectedBike = bike;
                this.operationMode = 3;
            },
            deleteBike: function (bike) {
                axi.delete('Delete/' + bike.id).then((response) => { // Request body should not works there
                    if (response.data.isSuccess) {
                        this.messages.push("Bike deleted successfully");
                        this.loadBikes();

                        setTimeout(() => { this.messages = []; }, 3000);
                    } else {
                        this.erros = response.data.messages;
                        setTimeout(() => { this.errors = []; }, 3000);
                    }
                }).catch((err) => {
                    this.errors.push('Error occured during delete.');
                    setTimeout(() => { this.errors = []; }, 3000);
                });
            },
            backToList: function () {
                this.selectedBike = {};
                this.operationMode = 0;
            },
            savedSuccessfully(msg) {
                this.selectedBike = {};
                this.messages.push(msg);
                console.log("saved");
                this.loadBikes();
                this.operationMode = 0;

                setTimeout(() => { this.messages = []; }, 3000);
            },
            operationCancelled() {
                this.selectedBike = {};
                this.messages.push("The operation has been cancelled.");

                console.warn("cancelled");
                this.operationMode = 0;
                setTimeout(() => { this.messages = []; }, 3000);
            }
        }
    });

    Vue.component('view-component', {
        props: ['bike'],
        template: '#view-template'
    });

    Vue.component('editor-component', {
        props: ['bike'],
        template: '#editor-template',
        data: function () {
            return {
                innerBike: {},
                brands: [],
                riders: [],
                isEdit: false,
                errors: []
            };
        },
        methods: {
            save() {
                if (this.isEdit) {
                    axi.put('Update', this.innerBike).then(this.handleSuccess).catch((err) => {
                        console.log(err);
                        this.handleError(['Error occured during processing.']);
                    });
                }
                else {
                    axi.post('Create', this.innerBike).then(this.handleSuccess).catch((err) => {
                        console.log(err);
                        this.handleError(['Error occured during processing.']);
                    });
                }
            },
            cancel() {
                this.$emit('cancelled');
            },
            handleSuccess(response) {
                if (response.data.isSuccess) {
                    this.$emit('saved', this.isEdit ? "Bike edited successfully" : "Bike created successfully");
                } else {
                    this.handleError(response.data.messages);
                }
            },
            handleError(errorMessages) {
                this.errors = errorMessages;

                setTimeout(() => { this.errors = []; }, 3000); // Auto error clean after 3sec
            }
        },
        created: function () {
            if (this.bike != undefined) {
                this.isEdit = true;

                // Copy
                this.innerBike = {
                    id: this.bike.id,
                    brandId: this.bike.brandId,
                    model_Name: this.bike.model_Name,
                    price: this.bike.price,
                    riderId: this.bike.riderId,
                    fix: this.bike.fix
                };
            } else {
                // Create new
                this.innerBike = {
                    id: 0,
                    brandId: 0,
                    model_Name: '',
                    price: 0,
                    riderId: 0,
                    fix:false
                };
            }

            axibrand.get("GetAll").then((response) => {
                this.brands = response.data;
            }).catch((err) => {
                console.log(err);
            });

            axirider.get("GetAll").then((response) => {
                this.riders = response.data;
            }).catch((err) => {
                console.log(err);
            });

        }
    });
</script>

<script type="text/x-template" id="view-template">
    <div style="text-align:left" class="bike-view-container">
        <div>
            <strong>Id</strong><br />
            <label>{{ bike.id }}</label>
        </div>
        <div>
            <strong>Brand Id</strong><br />
            <label>{{ bike.brandId }}</label>
        </div>
        <div>
            <strong>Model</strong><br />
            <label>{{ bike.model_Name }}</label>
        </div>
        <div>
            <strong>Price</strong><br />
            <label>{{ bike.price }}</label>
        </div>
        <div>
            <strong>Rider Id</strong><br />
            <label>{{ bike.riderId }}</label>
        </div>
        <div>
            <strong>Fix</strong><br />
            <label>{{ bike.fix }}</label>
        </div>
    </div>
</script>

<script type="text/x-template" id="editor-template">
    <div style="text-align:left" class="bike-view-container">
        <div v-if="errors.length > 0">
            <span v-for="msg in errors" style="color:red;font-weight:bold;">{{ msg }}</span>
        </div>
        <div>
            <strong>Manufacture</strong><br />
            <select id="brand-selector" v-model="innerBike.brandId" class="form-control">
                <option v-for="brand in brands" v-bind:value="brand.id">{{ brand.name }}</option>
            </select>
        </div>
        <div>
            <strong>Model Name</strong><br />
            <input type="text" v-model="innerBike.model_Name" class="form-control" />
        </div>
        <div>
            <strong>Price</strong><br />
            <input type="number" v-model.number="innerBike.price" class="form-control" />
        </div>
        <div>
            <strong>Rider</strong><br />
            <select id="rider-selector" v-model="innerBike.riderId" class="form-control">
                <option v-for="rider in riders" v-bind:value="rider.id">{{ rider.name }}</option>
            </select>
        </div>
        <div>
            <strong>Fix</strong><br />
            <input type="checkbox" v-model.number="innerBike.fix" class="form-control" />
        </div>
        <div class="float-right pt-3">
            <button class="btn btn-primary" v-on:click="save">Mentés</button>
            <button class="btn btn-secondary" v-on:click="cancel">Mégsem</button>
        </div>
    </div>
</script>
